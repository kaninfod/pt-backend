FROM ruby:2.4.1-slim

RUN apt-get update -yqq \
  && apt-get install -yqq --no-install-recommends \
   libmysqlclient-dev \
   mysql-client \
   libmagic-dev \
   graphicsMagick \
   imagemagick \
   libjpeg-dev \
   libpng-dev \
   exiftool \
   build-essential \
   git

RUN mkdir /app
WORKDIR /usr/src/app
COPY Gemfile* ./
RUN bundle install
COPY . .
